---
import "../styles/global.css";
import { Font } from "astro:assets";
import Header from "../components/header.svelte";
import Stats from "../components/stats.svelte";
import Nav from "../components/nav.svelte";
import RoutesListener from "../components/routes.listener.svelte";
import WindowListener from "../components/window.listener.svelte";
---

<!doctype html>
<html lang="en">
  <head>
    <!--

    (҂◡_◡) ᕤ

    Thanks for taking a look behind the curtain.
    Check out the repo: https://github.com/josephfh/josephfh-portfolio

    -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Joseph Hughes - Frontend developer</title>
    <Font cssVariable="--font-monomakh" preload />
  </head>
  <body>
    <div class="mx-20 mt-16 mb-10">
      <Header client:idle />
      <Stats client:only />
      <div class="mt-16 mb-8">
        <Nav client:idle />
      </div>

      <slot />

      <!-- <div class="bg-linear-to-b/increasing from-indigo-500 to-teal-400 flex w-2 top-0 absolute left-0 h-screen"></div>

      <div class="bg-teal-600 flex w-2 top-0 absolute left-0 h-screen opacity-60 hover:opacity-0 duration-200 transition-all"></div> -->

      <WindowListener client:only />
      <RoutesListener client:only />
    </div>
  </body>
</html>
